{% extends 'layout/blank.html.twig' %}
{% set tplContentClass = ['bsw-chart-container', tplContentClassDiy ?? null]|filter(v => v)|join(' ') %}

{% block page %}
  {% block filterBefore %}{% endblock %}
  {% if 'filter' not in logic.display ?? [] %}
    {% include 'limbs/filter.html.twig' %}
  {% endif %}
  {% block filterAfter %}{% endblock %}
  {% block chartBefore %}{% endblock %}
  <div class="bsw-chart-list">
    {% for item in chart.items %}
      {% include 'limbs/chart.html.twig' with {chart: item} %}
    {% endfor %}
  </div>
  {% block chartAfter %}{% endblock %}
{% endblock %}

{% block javascript %}
{% if 'filter' not in logic.display ?? [] %}
  {% include 'javascript/filter.md.twig' %}
{% endif %}
{% include 'javascript/chart.md.twig' %}
{% endblock %}