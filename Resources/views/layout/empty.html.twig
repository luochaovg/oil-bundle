{% extends '@LeonBsw/foundation/scaffold.html.twig' %}
{% set tpl_api = {login: path(scaffold.cnf.route_login_handler), upload: path(scaffold.cnf.route_upload)} %}

{% block body %}
  <a-spin
    :spinning="spinning"
    {% if scaffold.cnf.spinning_label is not empty %}
      tip="{{ scaffold.cnf.spinning_label|trans({}, 'twig') }}"
    {% endif %}
    size="large"
    wrapper-class-name="bsw-loading">
    {% if scaffold.cnf.spinning_icon is not empty %}
      <b-icon slot="indicator" type="{{ scaffold.cnf.spinning_icon }}" spin></b-icon>
    {% endif %}
    <a-back-top></a-back-top>
    {% block content %}{% endblock %}
  </a-spin>
{% endblock %}