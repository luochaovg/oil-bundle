{% extends '@LeonBsw/foundation/scaffold.html.twig' %}
{% set tpl_api = {
  login: path(scaffold.cnf.route_login_handler),
  upload: path(scaffold.cnf.route_upload),
  third_message: path(scaffold.cnf.route_thrid_message)
} %}

{% block body %}
  <a-spin
    :spinning="spinning"
    {% if scaffold.cnf.loading_label is not empty %}
      tip="{{ scaffold.cnf.loading_label|trans({}, 'twig') }}"
    {% endif %}
    size="large"
    wrapper-class-name="bsw-loading">
    {% if scaffold.cnf.icon_loading is not empty %}
      {{ scaffold.cnf.icon_loading|icon(true, {}, {slot:'indicator', spin:true})|raw }}
    {% endif %}
    <a-back-top></a-back-top>
    {% block content %}{% endblock %}
  </a-spin>
{% endblock %}