{% set tpl_api = {login: path('app_user_login_handler'), upload: path('app_upload')} %}
{% extends '@LeonBsw/foundation/scaffold.html.twig' %}

{% block body %}
  <a-spin
    :spinning="spinning"
    {% if scaffold.loading_text is defined %}
      tip="{{ scaffold.loading_text|trans({}, 'twig') }}"
    {% endif %}
    size="large"
    wrapper-class-name="bsw-loading">
    {% if scaffold.loading_icon is defined %}
      <b-icon slot="indicator" type="{{ scaffold.loading_icon }}" spin></b-icon>
    {% endif %}
    <a-back-top></a-back-top>
    {% block content %}{% endblock %}
  </a-spin>
{% endblock %}