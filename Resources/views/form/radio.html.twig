<a-radio-group
  {% if form.class %}
    class="{{ form.class }}"
  {% endif %}
  name="{{ form.name }}"
  :style="{{ form.style }}"
  :disabled="{{ form.disabled ? 'true' : 'false' }}"
  :data-bsw.prop="{{ form.formData }}"
  {% if form.change %}
    @change="{{ form.change }}"
  {% endif %}
  :auto-focus="{{ form.autoFocus ? 'true' : 'false' }}"
  {{ form.attributes|raw }}
  v-decorator="['{{ form.key }}', { initialValue: `{{ form.value }}`, rules: {{ form.formRules }} }]"
>
  <a-row>
    {% for value, label in form.enum %}
      {% if form.col is empty %}
        <a-radio value="{{ value }}">{{ label }}</a-radio>
      {% else %}
        <a-col {{ form.colStringify|raw }}>
          <a-radio value="{{ value }}">{{ label }}</a-radio>
        </a-col>
      {% endif %}
    {% endfor %}
  </a-row>
</a-radio-group>
