<a-input-number
  v-if="{{ form.needId ? 'true' : 'false' }}"
  {% if form.class %}
    class="{{ form.class }}"
  {% endif %}
  name="{{ form.name }}"
  :style="{{ form.style }}"
  :disabled="{{ form.disabled ? 'true' : 'false' }}"
  size="{{ form.size }}"
  :min="{{ form.min }}"
  :max="{{ form.max }}"
  step="{{ form.step }}"
  placeholder="{{ form.placeholder }}"
  v-decorator="['{{ field }}', { initialValue: `{{ form.value }}`, rules: {{ form.rules }} }]"
></a-input-number>

<a-upload
  {% if form.class %}
    class="{{ form.class }}"
  {% endif %}
  :style="{{ form.style }}"
  :disabled="{{ form.disabled ? 'true' : 'false' }}"
  accept="{{ form.accept }}"
  action="{{ form.url }}"
  list-type="{{ form.listType }}"
  :show-upload-list="false"
  :file-list="{{ form.fileListKey }}"
  name="{{ form.flag }}"
  :data="{ file_flag: '{{ form.flag }}' }"
  @click.native="persistenceUploadField = '{{ field }}'"
  @change="{{ form.change }}"
  {{ form.attributes|raw }}
  v-decorator="['{{ field }}FileList']"
>
  {% if form.needTips %}
    <a-popover>
      <template v-slot:content>
        <a-table
          :columns="persistenceUploadTipsCollect.{{ field }}.columns"
          :data-source="persistenceUploadTipsCollect.{{ field }}.list"
          :pagination="false"
          :scroll="{ x: 340 }"
          bordered
          size="small"
        ></a-table>
      </template>
      <a-button
        type="{{ form.buttonType }}"
        :style="{{ form.buttonStyle }}"
      >
        {{ scaffold.cnf.iconUpload|icon|raw }}
        {{ form.buttonLabel|trans({}, 'twig') }}
      </a-button>
    </a-popover>
  {% else %}
    <a-button
      type="{{ form.buttonType }}"
      :style="{{ form.buttonStyle }}"
    >
      {{ scaffold.cnf.iconUpload|icon|raw }}
      {{ form.buttonLabel|trans({}, 'twig') }}
    </a-button>
  {% endif %}
</a-upload>
