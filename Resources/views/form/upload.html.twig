<a-input-number v-if="{{ form.needId ? 'true' : 'false' }}"
  {% if form.class %}
    class="{{ form.class }}"
  {% endif %}
  :style="{{ form.style }}"
  :disabled="{{ form.disabled ? 'true' : 'false' }}"
  size="{{ form.size }}"
  :min="{{ form.min }}"
  :max="{{ form.max }}"
  step="{{ form.step }}"
  placeholder="{{ form.placeholder }}"
  v-decorator="['{{ field }}', { initialValue: `{{ form.value }}`, rules: {{ form.rules }} }]"
></a-input-number>

<a-upload
  {% if form.class %}
    class="{{ form.class }}"
  {% endif %}
  :style="{{ form.style }}"
  :disabled="{{ form.disabled ? 'true' : 'false' }}"
  accept="{{ form.accept }}"
  action="{{ form.url }}"
  list-type="{{ form.listType }}"
  :show-upload-list="false"
  :file-list="{{ form.fileListKey }}"
  name="{{ form.flag }}"
  :data="{ file_flag: '{{ form.flag }}' }"
  @click.native="persistence_upload_field = '{{ field }}'"
  @change="{{ form.change }}"
  {{ form.attributes|raw }}
  v-decorator="['{{ field }}FileList']"
>
  <a-popover>
    <template slot="content">
      <a-table
        :columns="persistence_upload_tips_collect.{{ field }}.columns"
        :data-source="persistence_upload_tips_collect.{{ field }}.list"
        :pagination="false"
        :scroll="{ x: 340 }"
        bordered
        size="small"
      ></a-table>
    </template>
    <a-button>
      {{ scaffold.cnf.icon_upload|icon|raw }}
      {{ form.buttonLabel|trans({}, 'twig') }}
    </a-button>
  </a-popover>
</a-upload>
