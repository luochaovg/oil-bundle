<a-textarea
  {% if form.class %}
    class="{{ form.class }}"
  {% endif %}
  name="{{ form.name }}"
  :style="{{ form.style }}"
  :disabled="{{ form.disabled ? 'true' : 'false' }}"
  size="{{ form.size }}"
  :auto-size="{ minRows: {{ form.minRows }}, maxRows: {{ form.maxRows }} }"
  {% if form.maxLength %}
    :max-length="{{ form.maxLength }}"
  {% endif %}
  {% if form.change %}
    @change="{{ form.change }}"
  {% endif %}
  placeholder="{{ form.placeholder }}"
  {{ form.attributes|raw }}
  v-decorator="['{{ field }}', { initialValue: `{{ form.value }}`, rules: {{ form.rules }} }]"
></a-textarea>
{% include 'form/iframe-entrypoint.html.twig' %}