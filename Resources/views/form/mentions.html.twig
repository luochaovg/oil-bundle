<a-mentions
  {% if form.class %}
    class="{{ form.class }}"
  {% endif %}
  name="{{ form.name }}"
  :style="{{ form.style }}"
  :disabled="{{ form.disabled ? 'true' : 'false' }}"
  :rows="{{ form.rows }}"
  {% if form.filterOption %}
    :filter-option="{{ form.filterOption }}"
  {% endif %}
  :data-bsw.prop="{{ form.formData }}"
  {% if form.change %}
    @change="{{ form.change }}"
  {% endif %}
  :auto-focus="{{ form.autoFocus ? 'true' : 'false' }}"
  placeholder="{{ form.placeholder }}"
  {{ form.attributes|raw }}
  v-decorator="['{{ form.key }}', { initialValue: `{{ form.value }}`, rules: {{ form.formRules }} }]"
>
  {% for value, label in form.enum %}
    <a-mentions-option value="{{ label ~ '!' ~ value }}">{{ label }}</a-mentions-option>
  {% endfor %}
</a-mentions>

